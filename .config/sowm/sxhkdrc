#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	kitty

# program launcher
ctrl + d
	rofi -show drun

# web browser
ctrl + w
	chromium

# web browser incognito
ctrl + shift + w
	chromium -incognito

# file manager
ctrl + f
	thunar

# volume control
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# mpd controls
ctrl + m
	kitty ncmpcpp

ctrl + shift + p
	mpc toggle

ctrl + shift + s
	mpc stop

ctrl + shift + o
	mpc next

ctrl + shift + i
	mpc prev

# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd
